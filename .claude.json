{
    "mcpServers": {
        "sequential-thinking": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-sequential-thinking"
            ]
        },
        "context7": {
            "command": "npx",
            "args": [
                "-y",
                "@upstash/context7-mcp"
            ]
        },
        "perplexity": {
            "command": "npx",
            "args": [
                "-y",
                "@perplexity-ai/mcp-server"
            ],
            "env": {
                "PERPLEXITY_API_KEY": "YOUR_API_KEY_HERE"
            }
        }
    }
}